<ul>
	<li n:foreach="$articles as $article">
		<h2 class="title">
			<a n:href="Blog:show $article->slug">{$article->getTitle()}</a>
			<span>{$article->getCreated()|date:'d.m.Y'}</span>
		</h2>
		<p>{!$article->getContent()}</p>
		<!--
		<p>Updated at: {$article->getUpdated()|date}</p>-->
		<p n:if="count($article->getCategories())">
			{_'KategÃ³rie'}:
			<small n:foreach="$article->getCategories() as $cat">
				<a n:href="Blog:showCategory $cat->getSlug()">{$cat->getTitle()}</a>{if !$iterator->last},{/if}
			</small>
		</p>
		<a n:if="$user->isLoggedIn()" n:href=":Admin:Blog:update $article->getId()">Update</a>
	</li>
</ul>
